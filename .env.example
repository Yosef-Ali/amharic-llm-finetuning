# Amharic LLM Environment Variables Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env file to version control

# =============================================================================
# HUGGING FACE CREDENTIALS
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
# Required permissions: Read/Write access to repos, Inference API access
HUGGINGFACE_TOKEN=your_huggingface_token_here
HF_TOKEN=your_huggingface_token_here

# Optional: Hugging Face Hub cache directory
# HF_HOME=/path/to/huggingface/cache

# =============================================================================
# KAGGLE API CREDENTIALS
# =============================================================================
# Get your credentials from: https://www.kaggle.com/account
# Download kaggle.json and place in ~/.kaggle/ directory
# OR set these environment variables:
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Optional: Kaggle config directory (defaults to ~/.kaggle)
# KAGGLE_CONFIG_DIR=~/.kaggle

# =============================================================================
# PROJECT PATHS (Optional)
# =============================================================================
# Custom data directory
# AMHARIC_DATA_DIR=/path/to/data

# Custom models directory
# AMHARIC_MODEL_DIR=/path/to/models

# Custom results directory
# AMHARIC_RESULTS_DIR=/path/to/results

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Environment type (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Default model name for Hugging Face
DEFAULT_MODEL_NAME=microsoft/DialoGPT-medium

# Model cache directory
# MODEL_CACHE_DIR=/path/to/model/cache

# =============================================================================
# GRADIO APP SETTINGS
# =============================================================================
# Gradio server settings
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# =============================================================================
# TRAINING SETTINGS
# =============================================================================
# GPU settings
CUDA_VISIBLE_DEVICES=0

# Mixed precision training
USE_MIXED_PRECISION=true

# Batch size
TRAIN_BATCH_SIZE=16
EVAL_BATCH_SIZE=16

# Learning rate
LEARNING_RATE=5e-5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API rate limiting
API_RATE_LIMIT=100

# CORS settings for web deployment
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Weights & Biases (optional)
# WANDB_API_KEY=your_wandb_api_key
# WANDB_PROJECT=amharic-llm

# TensorBoard logging directory
# TENSORBOARD_LOG_DIR=/path/to/tensorboard/logs

# Hugging Face API token
HF_API_TOKEN=your_huggingface_token_here
